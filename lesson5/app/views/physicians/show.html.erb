<%=render "card", physician: @physician %>

<% if can? :update, @physician%>
  <%= link_to "Edit", edit_physician_path(@physician), class: "btn btn-warning m-1" %>
<% end %>
<% if can? :destroy, @physician%>
  <%= link_to "Delete", physician_path(@physician), method: :delete, data: {confirm: "Вы хотите удалить врача из системы?"}, class: 'btn btn-danger' %>
<% end %>
