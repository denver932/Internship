<%= render "card", appointment: @appointment %>
<% if can? :update, @appointment %>
  <%= link_to "Edit", edit_appointment_path(@appointment), class: 'btn btn-warning m-1' %>
<% end %>
<% if can? :destroy, @appointment %>
  <%= link_to "Delete", appointment_path(@appointment), method: :delete, data: { confirm: "Вы хотите удалить встречу из системы?" }, class: 'btn btn-danger' %>
<% end %>
