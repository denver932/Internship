<div class = "card">
  <div class = "card-header">
    <h2>Diagnosis Item №<%= @diagnosis_item.id %></h2>
  </div>
  <div class ="card-body">
    <p><b>Patient: </b><%= @diagnosis_item.patient.first_name %></p>
    <p><b>Physician: </b><%= @diagnosis_item.physician.first_name %></p>
    <p><b>Content: </b><%= @diagnosis_item.content %></p>
  </div>
  <div class=" card-footer">
    <%= link_to "Edit", edit_diagnosis_item_path(@diagnosis_item), class: 'btn btn-warning m-1 '%>
    <%= link_to "Delete", diagnosis_item_path(@diagnosis_item),
        method: :delete, data: {confirm: "Вы хотите удалить встречу из системы?"}, class: 'btn btn-danger' %>
  </div>
</div>
