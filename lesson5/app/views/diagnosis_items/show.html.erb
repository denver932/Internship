<div class = "card">
  <div class = "card-header">
    <h2>Diagnosis Item №<%= @diagnosisitem.id%></h2>
  </div>
  <div class ="card-body">
    <p><b>Patient: </b><%= @diagnosisitem.patient.first_name%></p>
    <p><b>Physician: </b><%= @diagnosisitem.physician.first_name%></p>
    <p><b>Content: </b><%= @diagnosisitem.content%></p>
  </div>
  <div class=" card-footer">
    <%= link_to "Edit", edit_diagnosisitem_path(@diagnosisitem), :class => 'btn btn-warning m-1 '%>
    <%= link_to "Delete", diagnosisitem_path(@diagnosisitem),
        method: :delete, data: {confirm: "Вы хотите удалить встречу из системы?"},
        :class => 'btn btn-danger'%>
  </div>
</div>
